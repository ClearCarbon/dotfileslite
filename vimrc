set nocompatible
set modelines=0
set backspace=indent,eol,start
syntax on
filetype on
filetype plugin on
filetype indent on
set number
set smarttab
set autoindent
set copyindent
set showcmd
set showmode
set foldlevelstart=99
set hlsearch
set incsearch
set ignorecase
set smartcase
set gdefault
set cursorline
set ttyfast
set scrolloff=9
set ruler
set tabstop=2
set expandtab
set shiftwidth=2
set softtabstop=2
set nowrap
let mapleader = ","
let g:mapleader = ","
nnoremap <C-j> <C-W>j
nnoremap <C-k> <C-W>k
nnoremap <C-h> <C-W>h
nnoremap <C-l> <C-W>l
nnoremap j gj
nnoremap k gk
nnoremap ; :
nnoremap <leader>n :set number<cr>
nnoremap <leader>r :set relativenumber<cr>
nnoremap <leader>p ^i
set colorcolumn=80
